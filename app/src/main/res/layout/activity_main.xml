<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/RedPacket"
        android:layout_width="382dp"
        android:layout_height="702dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="@string/red_packet"
        android:focusable="true"
        android:longClickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_red_packet" />

    <ImageView
        android:id="@+id/CoinOpen"
        android:layout_width="133dp"
        android:layout_height="139dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="125dp"
        android:contentDescription="@string/coin_open"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_open_coin" />

</androidx.constraintlayout.widget.ConstraintLayout>